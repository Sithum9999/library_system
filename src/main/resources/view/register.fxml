<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.icet.learn.controller.register.RegisterFormController">
   <children>
      <AnchorPane prefHeight="450.0" prefWidth="650.0">
         <children>

            <Rectangle height="450.0" width="650.0">
               <fill>
                  <LinearGradient endX="1.0" endY="1.0" startX="0.0" startY="0.0">
                     <stops>
                        <Stop color="#141E30" offset="0.0" />
                        <Stop color="#243B55" offset="0.5" />
                        <Stop color="#2C5364" offset="1.0" />
                     </stops>
                  </LinearGradient>
               </fill>
            </Rectangle>

            <Label layoutX="220.0" layoutY="40.0" text="Create an Account" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="28.0" />
               </font>
            </Label>

            <Rectangle arcHeight="25.0" arcWidth="25.0" fill="WHITE" height="320.0" layoutX="135.0" layoutY="100.0" opacity="0.95" stroke="LIGHTGRAY" strokeWidth="1.0" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 5);" width="380.0" />

            <JFXTextField fx:id="txtEmail" focusColor="#2C5364" layoutX="175.0" layoutY="140.0" prefWidth="300.0" promptText="Enter your Email" style="-fx-background-radius: 20px; -fx-padding: 8px;" unFocusColor="GRAY" />

            <JFXTextField fx:id="txtPassword" focusColor="#2C5364" layoutX="175.0" layoutY="190.0" prefWidth="300.0" promptText="Enter your Password" style="-fx-background-radius: 20px; -fx-padding: 8px;" unFocusColor="GRAY" />

            <JFXTextField fx:id="txtConfirmedPassword" focusColor="#2C5364" layoutX="175.0" layoutY="240.0" prefWidth="300.0" promptText="Confirm your Password" style="-fx-background-radius: 20px; -fx-padding: 8px;" unFocusColor="GRAY" />

            <JFXButton fx:id="btnRegister" buttonType="RAISED" layoutX="250.0" layoutY="300.0" onAction="#btnRegisterOnAction" prefWidth="150.0" style="-fx-background-color: #2C5364; -fx-font-size: 16px; -fx-background-radius: 20px; -fx-font-weight: bold;" text="Sign Up" textFill="WHITE" />

         </children>
      </AnchorPane>
   </children>
</AnchorPane>
